{
  "name": "visa-compliance-d",
  "version": "1.0.0",
  "description": "This is a compliance-first visa insurance platform.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./assets/css/input.css -o ./ui/style.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./assets/css/input.css -o ./ui/style.css --watch",
    "dev": "npm-run-all --parallel watch:css hugo:dev",
    "hugo:dev": "hugo server -D",
    "build": "npm run build:css && hugo --minify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
