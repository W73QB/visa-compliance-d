{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Payments",
  "type": "object",
  "required": ["payment_links"],
  "properties": {
    "payment_links": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9-]+$": {
          "type": "object",
          "required": ["label", "payment_link"],
          "properties": {
            "label": { "type": "string" },
            "payment_link": { "type": "string" }
          }
        }
      }
    }
  }
}
