{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProductFacts",
  "type": "object",
  "required": [
    "id",
    "provider",
    "product_name",
    "effective_date",
    "policy_version",
    "specs",
    "evidence"
  ],
  "properties": {
    "id": { "type": "string" },
    "provider": { "type": "string" },
    "product_name": { "type": "string" },
    "effective_date": { "type": "string", "format": "date" },
    "policy_version": { "type": "string" },

    "specs": {
      "type": "object",
      "properties": {
        "type": { "type": ["string", "null"] },
        "overall_limit": { "type": ["number", "null"] },
        "currency": { "type": ["string", "null"] },
        "deductible": {
          "type": ["object", "null"],
          "properties": {
            "amount": { "type": "number" },
            "currency": { "type": "string" }
          }
        },
        "copay": { "type": ["boolean", "null"] },
        "payment_cadence": { "type": ["string", "null"] },
        "contract_commitment_months": { "type": ["number", "null"] },

        "jurisdiction_facts": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "authorized": { "type": ["boolean", "null"] },
              "evidence": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "source_id": { "type": "string" },
                    "locator": { "type": "string" },
                    "excerpt": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "evidence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["source_id", "locator", "excerpt"],
        "properties": {
          "source_id": { "type": "string" },
          "locator": { "type": "string" },
          "excerpt": { "type": "string" }
        }
      }
    }
  }
}
